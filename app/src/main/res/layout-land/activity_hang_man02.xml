<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout_land">
    <!-- Game_Layout (Inner lay out) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hangman_layout_land"
        android:layout_width="786dp"
        android:layout_height="364dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/alphabetScrollView_land"
        tools:layout_editor_absoluteX="32dp">

        <ImageView
            android:id="@+id/hangman_view_land"
            android:layout_width="285dp"
            android:layout_height="194dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/beginning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/letter1_land"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="232dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/hangman_view" />

        <TextView
            android:id="@+id/letter2_land"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="232dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="35dp"
            app:layout_constraintStart_toStartOf="@id/letter1"
            app:layout_constraintTop_toTopOf="@id/hangman_view" />

        <TextView
            android:id="@+id/letter3_land"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="232dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="35dp"
            app:layout_constraintStart_toStartOf="@id/letter2"
            app:layout_constraintTop_toTopOf="@id/hangman_view" />

        <TextView
            android:id="@+id/letter4_land"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="232dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="35dp"
            app:layout_constraintStart_toStartOf="@id/letter3"
            app:layout_constraintTop_toTopOf="@id/hangman_view" />

        <TextView
            android:id="@+id/letter5_land"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="232dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="35dp"
            app:layout_constraintStart_toStartOf="@id/letter4"
            app:layout_constraintTop_toTopOf="@id/hangman_view_land" />

        <TextView
            android:id="@+id/explainLabel"
            android:layout_width="287dp"
            android:layout_height="31dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="304dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Choose a letter"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/hangman_view_land" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/alphabetScrollView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="384dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/hangman_layout_land">

        <LinearLayout
